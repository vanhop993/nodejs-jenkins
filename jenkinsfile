pipeline {
    agent any
    tools {nodejs "node"}
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/vanhop993/nodejs-jenkins.git'
            }
        } 
        stage('Get package') {
            steps {
                echo 'get package'
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                echo 'Build...'
                sh 'npm start'
            }
        }
        stage('Testing') {
            steps {
                echo 'Testing...'
                sh 'npm run test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy...'
            }
        }
    }
}