pipeline {
    agent any
    tools {nodejs '16.14.2'}
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/vanhop993/nodejs-jenkins.git'
            }
        } 
        stage('Get package') {
            steps {
                echo 'get package'
                sh 'npm install'
            }
        }
        stage('Testing') {
            steps {
                echo 'Testing...'
                sh 'npm run test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy...'
                withDockerRegistry(credentialsId: 'docker-hub', url: 'https://index.docker.io/v1/') {
                    
                }
            }
        }
    }
}